<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm" needAccessControl="false">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    *
                FROM
                    (SELECT
                        p.*,
                        (SELECT
                            property_desc1
                        FROM
                            bid_other_tlp_lines l
                        WHERE
                            p.line_id = l.other_lind_id AND
                            p.name    = 'property_name1'
                        ) property_name1,
                        (SELECT
                            property_desc2
                        FROM
                            bid_other_tlp_lines l
                        WHERE
                            p.line_id = l.other_lind_id AND
                            p.name    = 'property_name2'
                        ) property_name2,
                        (SELECT
                            l.item_category_name
                        FROM
                            bid_other_tlp_lines l
                        WHERE
                            p.line_id = l.other_lind_id
                        ) item_category_name
                    FROM
                        bid_all_property p
                    WHERE
                        p.type = 'other'
                    UNION
                    SELECT
                        p.*,
                        (SELECT
                            property_desc1
                        FROM
                            bid_material_tlp_line l
                        WHERE
                            p.line_id = l.material_lind_id AND
                            p.name    = 'property_name1'
                        ) property_name1,
                        (SELECT
                            property_desc2
                        FROM
                            bid_material_tlp_line l
                        WHERE
                            p.line_id = l.material_lind_id AND
                            p.name    = 'property_name2'
                        ) property_name2,
                        (SELECT
                            l.item_category_name
                        FROM
                            bid_material_tlp_line l
                        WHERE
                            p.line_id = l.material_lind_id
                        ) item_category_name
                    FROM
                        bid_all_property p
                    WHERE
                        p.type = 'material'
                    UNION
                    SELECT
                        h.line_property_id,
                        h.quotation_id,
                        NULL AS line_id,
                        h.line_num,
                        'discount' AS type,
                        'property_name1' name,
                        h.line_property_id AS property_id,
                        NULL AS property_name,
                        h.operator_code,
                        h.value_from,
                        h.value_to,
                        h.segment1,
                        h.segment2,
                        h.CREATION_DATE,
                        h.CREATED_BY,
                        h.LAST_UPDATE_DATE,
                        h.LAST_UPDATED_BY,
                        h.enable_flag,
                        NULL AS vendor_id,
                        '数量区间' AS property_name1,
                        NULL AS property_name2,
                        '大批量折扣点' AS item_category_name
                    FROM
                        bid_discount_property h
                    UNION
                    SELECT
                        h.line_id AS line_property_id,
                        h.quotation_id,
                        NULL AS line_id,
                        NULL AS line_num,
                        'const' AS type,
                        'property_name1' name,
                        h.property_id,
                        NULL AS property_name,
                        '=' AS operator_code,
                        h.value AS value_from,
                        NULL AS value_to,
                        h.segment1,
                        h.segment2,
                        h.CREATION_DATE,
                        h.CREATED_BY,
                        h.LAST_UPDATE_DATE,
                        h.LAST_UPDATED_BY,
                        h.enable_flag,
                        NULL AS vendor_id,
                        '价格' AS property_name1,
                        NULL AS property_name2,
                        '单价' AS item_category_name
                    FROM
                        bid_quotation_tlp_lines h
                    WHERE
                        h.segment1 IS NOT NULL
                    UNION
                    SELECT
                        p.*,
                        (SELECT
                            property_desc1
                        FROM
                            bid_special_tlp_line l
                        WHERE
                            p.line_id = l.special_lind_id AND
                            p.name    = 'property_name1'
                        ) property_name1,
                        (SELECT
                            property_desc2
                        FROM
                            bid_special_tlp_line l
                        WHERE
                            p.line_id = l.special_lind_id AND
                            p.name    = 'property_name2'
                        ) property_name2,
                        (SELECT
                            l.item_category_name
                        FROM
                            bid_special_tlp_line l
                        WHERE
                            p.line_id = l.special_lind_id
                        ) item_category_name
                    FROM
                        bid_all_property p
                    WHERE
                        p.type = 'special'
                    ) v #WHERE_CLAUSE#
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:data-filters>
        <bm:data-filter name="vendor_id" expression="(${/parameter/@vendor_id} is null or v.vendor_id is null or (select pv.coop_company_id from pur_vendors_vl pv where pv.vendor_id = v.vendor_id) = ${/parameter/@vendor_id})"/>
    </bm:data-filters>
    <bm:query-fields>
        <bm:query-field name="quotation_id" queryExpression="v.quotation_id = ${/parameter/@quotation_id}"/>
        <!-- <bm:query-field name="line_id" queryExpression="p.line_id = ${/parameter/@line_id}"/> -->
    </bm:query-fields>
</bm:model>
