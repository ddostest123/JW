<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm" needAccessControl="true">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    *
                FROM
                    (SELECT
                        t1.template_id,
                        t2.template_name,
                        t1.item_id,
                        t1.item_code,
                        t1.item_name,
                        t1.config_declare,
                        t1.config_icon,
                        t1.default_content,
                        t1.config_type,
                        DECODE(t1.config_type, 'text', '文本', '图像') AS config_type_display
                    FROM
                        fnd_login_template_items t1,
                        fnd_login_templates t2
                    WHERE
                        t1.template_id = t2.template_id
                    ) t #WHERE_CLAUSE#
                order by item_id
            ]]></bm:query-sql>
        </bm:operation>
        <bm:operation name="update">
            <bm:update-sql><![CDATA[
        	begin
        		  fnd_bg_login_page_config_pk.load_login_template_items(p_template_id    =>${@template_id},
        		  														p_item_id	     =>${@item_id},
        		  														p_item_code	     =>${@item_code},
				                                                        p_item_name      =>${@item_name},
				                                                        p_config_declare =>${@config_declare},
				                                                        p_config_icon    =>${@config_icon},
				                                                        p_config_type    =>${@config_type},
				                                                        p_default_content=>${@default_content},
				                                                        p_user           =>${/session/@user_id});
			end;
        	
        	]]></bm:update-sql>
        </bm:operation>
        <bm:operation name="insert">
            <bm:update-sql><![CDATA[
        	begin
        		  fnd_bg_login_page_config_pk.load_login_template_items(p_template_id    =>${@template_id},
        		  														p_item_id	     =>${@item_id},
        		  														p_item_code		 =>${@item_code},
				                                                        p_item_name      =>${@item_name},
				                                                        p_config_declare =>${@config_declare},
				                                                        p_config_icon    =>${@config_icon},
				                                                        p_config_type    =>${@config_type},
				                                                        p_default_content=>${@default_content},
				                                                        p_user           =>${/session/@user_id});
			end;
        	
        	]]></bm:update-sql>
        </bm:operation>
        <bm:operation name="delete">
            <bm:update-sql><![CDATA[
        		delete from fnd_login_template_items t where t.item_id = ${@item_id}
        	
        	]]></bm:update-sql>
        </bm:operation>
    </bm:operations>
    <bm:query-fields>
        <bm:query-field name="template_id" queryExpression="t.template_id = ${@template_id}"/>
    </bm:query-fields>
</bm:model>
