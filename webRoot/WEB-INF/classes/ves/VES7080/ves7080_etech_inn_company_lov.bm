<bm:model xmlns:f="aurora.database.features" xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    v.*
                FROM
                    (SELECT
                        pv.coop_company_id company_id,
                        pv.display_vendor_code company_code,
                        (SELECT
                            fc.company_full_name
                        FROM
                            fnd_companies_vl fc
                        WHERE
                            fc.company_id = pv.coop_company_id
                        ) company_full_name,
                        (SELECT
                            *
                        FROM
                            (SELECT
                                ph.technological_innovation_sorce
                            FROM
                                ves_innovation_plan_headers ph
                            WHERE
                                ph.require_company_id = pv.coop_company_id
                            ORDER BY
                                last_update_date DESC
                            )
                        WHERE
                            rownum = 1
                        ) te_innovation_sorce,
                        (SELECT
                            *
                        FROM
                            (SELECT
                                ph.technical_exchange_sorce
                            FROM
                                ves_innovation_plan_headers ph
                            WHERE
                                ph.require_company_id = pv.coop_company_id
                            ORDER BY
                                last_update_date DESC
                            )
                        WHERE
                            rownum = 1
                        ) technical_exchange_sorce,
                        (SELECT
                            *
                        FROM
                            (SELECT
                                ph.innovation_number
                            FROM
                                ves_innovation_plan_headers ph
                            WHERE
                                ph.require_company_id = pv.coop_company_id
                            ORDER BY
                                last_update_date DESC
                            )
                        WHERE
                            rownum = 1
                        ) innovation_number,
                        TO_CHAR(SYSDATE, 'yyyy-mm-dd') last_update_date_desc,
                        '人为录入' update_type_desc,
                        (SELECT
                            su.description
                        FROM
                            sys_user su
                        WHERE
                            su.user_id = ${/session/@user_id}
                        ) last_updated_by_desc
                    FROM
                        pur_vendors_vl pv
                    WHERE
                        pv.coop_company_id IS NOT NULL AND
                        pv.business_group   = ${/session/@business_group}
                    ) v #WHERE_CLAUSE#
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:fields>
        <bm:field name="company_code" databaseType="VARCHAR2" datatype="java.lang.String" displayWidth="100" forDisplay="true" forQuery="true" prompt="供应商代码"/>
        <bm:field name="company_full_name" databaseType="VARCHAR2" datatype="java.lang.String" displayWidth="150" forDisplay="true" forQuery="true" prompt="供应商名称"/>
        <bm:field name="company_id" databaseType="VARCHAR2" datatype="java.lang.String"/>
        <bm:field name="innovation_number" databaseType="VARCHAR2" datatype="java.lang.String" displayWidth="100" forDisplay="true" prompt="提案编号"/>
        <bm:field name="te_innovation_sorce" databaseType="VARCHAR2" datatype="java.lang.String" displayWidth="100" forDisplay="true" prompt="技术创新提案"/>
        <bm:field name="technical_exchange_sorce" databaseType="VARCHAR2" datatype="java.lang.String" displayWidth="100" forDisplay="true" prompt="技术交流与推介"/>
        <bm:field name="last_update_date_desc" databaseType="VARCHAR2" datatype="java.lang.String"/>
        <bm:field name="update_type_desc" databaseType="VARCHAR2" datatype="java.lang.String"/>
        <bm:field name="last_updated_by_desc" databaseType="VARCHAR2" datatype="java.lang.String"/>
    </bm:fields>
    <bm:query-fields>
        <bm:query-field name="company_code" queryExpression="v.company_code like &apos;%&apos;||${@company_code}||&apos;%&apos;"/>
        <bm:query-field name="company_full_name" queryExpression="v.company_full_name like &apos;%&apos;||${@company_full_name}||&apos;%&apos;"/>
    </bm:query-fields>
</bm:model>
