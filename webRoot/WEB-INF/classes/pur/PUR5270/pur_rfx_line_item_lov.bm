    <bm:fields>
        <bm:field name="item_id"/>
        <bm:field name="item_category_id"/>
        <bm:field name="item_category_desc"/>
        <bm:field name="tax_type_rate"/>
        <bm:field name="inv_org_id"/>
        <bm:field name="inv_organization_code" displayWidth="120" forDisplay="true" forQuery="true" prompt="库存组织"/>
        <!-- <bm:field name="suggested_operation"/> -->
        <bm:field name="display_item_code" displayWidth="120" forDisplay="true" forQuery="true" prompt="物品编码"/>
        <bm:field name="item_desc" displayWidth="260" forDisplay="true" forQuery="true" prompt="物品描述"/>
        <bm:field name="uom_code" displayWidth="60" forDisplay="true" prompt="单位"/>
        <bm:field name="test_type"/>
        <bm:field name="item_category_code"/>
    </bm:fields>
