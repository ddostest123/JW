<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:ns2="aurora.database.local.oracle" xmlns:bm="http://www.aurora-framework.org/schema/bm" xmlns:f="aurora.database.features">
    <bm:operations>
        <bm:operation name="execute">
            <bm:update-sql><![CDATA[begin            
            	${@result_num} := wfl_core_pkg.workflow_approve(
            		p_rcpt_record_id => ${@record_id},
            		p_node_action_id => ${@node_action_id},
            		p_comment => ${@comment_text},
            		p_user_id => ${/session/@user_id}
        		);
    		end;]]></bm:update-sql>
            <bm:parameters>
                <bm:parameter name="result_num" dataType="java.lang.Long" input="false" output="true" outputPath="@result_num"/>
            </bm:parameters>
        </bm:operation>
    </bm:operations>
</bm:model>
