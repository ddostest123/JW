                                            <a:event name="enterdown" handler="PAY1010_package_query"/>
                                        </a:events>
                                    </a:numberField>
                                    <a:numberField name="valid_date" allowDecimals="false" allowNegative="false" bindTarget="PAY1010_package_query_ds" prompt="套餐期限（月）">
