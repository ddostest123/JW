<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure>
        <a:model-query model="fnd.fnd_dimension_values" rootpath="fnd2220_fnd_dimension_values_assign"/>
    </a:init-procedure>
    <a:view>
        <div/>
        <script><![CDATA[
        
        function fnd2220_setinitdata(ds,record,index){
           record.set('dimension_value_id',${/parameter/@dimension_value_id});
        }
        
        function fnd2220_editFunction(record,name){
        	if(record.isNew){
        		return 'fnd2220_company_code_lov';
        	}
        	return '';
        }
		]]></script>
        <a:dataSets>
            <a:dataSet id="fnd2220_fnd_dimension_values_assign_query_ds" loadData="true">
                <a:datas dataSource="/model/fnd2220_fnd_dimension_values_assign"/>
                <a:fields>
                    <a:field name="dimension_value_code" readOnly="true"/>
                    <a:field name="description" readOnly="true"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="fnd2220_fnd_dimension_values_assign_result_ds" autoQuery="true" model="fnd.FND2220.fnd_company_dimension_values" queryDataSet="fnd2220_fnd_dimension_values_assign_query_ds" selectable="true">
                <a:fields>
                    <a:field name="dimension_value_id"/>
                    <a:field name="company_id"/>
                    <a:field name="company_code" lovHeight="450" lovService="fnd.fnd_valid_company_lov" lovWidth="500" required="true" title="FND_DIMENSION_VALUES.COMPANY_ASSIGN">
                        <a:mapping>
                            <a:map from="company_id" to="company_id"/>
                            <a:map from="company_code" to="company_code"/>
                            <a:map from="company_short_name" to="company_short_name"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="company_short_name"/>
                    <a:field name="enabled_flag" checkedValue="Y" defaultValue="Y" uncheckedValue="N"/>
                </a:fields>
                <a:events>
                    <a:event name="add" handler="fnd2220_setinitdata"/>
                </a:events>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:fieldSet column="2" title="FND_DIMENSION_VALUES.DISTRIBUTION_DETAILS">
                <a:textField name="dimension_value_code" bindTarget="fnd2220_fnd_dimension_values_assign_query_ds" prompt="FND_DIMENSION_VALUES.DIMENSION_VALUE_CODE"/>
                <a:textField name="description" bindTarget="fnd2220_fnd_dimension_values_assign_query_ds" prompt="FND_DIMENSION_VALUES.DESCRIPTION"/>
            </a:fieldSet>
            <a:grid bindTarget="fnd2220_fnd_dimension_values_assign_result_ds" height="330" navBar="true" width="500">
                <a:toolBar>
                    <a:button type="add"/>
                    <a:button type="clear"/>
                    <a:button type="save"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="company_code" align="center" editorFunction="fnd2220_editFunction"/>
                    <a:column name="company_short_name" align="left" editor="fnd2220_company_short_name_tf"/>
                    <a:column name="enabled_flag" editor="fnd2220_enabled_flag_assign_cb"/>
                </a:columns>
                <a:editors>
                    <a:lov id="fnd2220_company_code_lov"/>
                    <a:textField id="fnd2220_company_short_name_tf"/>
                    <a:checkBox id="fnd2220_enabled_flag_assign_cb"/>
                </a:editors>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
